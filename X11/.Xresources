! Enable 256 colors in other terminal applications
URxvt*termName: rxvt-unicode-256color

! Fonts
URxvt.font: xft:iosevka:size=16

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.externalBorder: 10
*.dynamicColors:on
*.letterSpace: 1

URxvt.perl-ext-common: default,selection-to-clipboard,clipboard-osc,url-select,keyboard-select,resize-font

! Urls are opened with qutebrowser as
! Alt+u : Select the url under cursor
! y	: yank selected url
! k, j	: select next, previous url
! Return: Open selected url
! Esc	: Cancel url selection mode
URxvt.url-select.launcher: /usr/bin/qutebrowser
URxvt.url-select.underline: true
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

! Make pasting and copying easier
! Paste from clipboard with CTRL+SHIFT+V
URxvt.iso14755: false

! Extra
URxvt.intensityStyles: false
URxvt.depth: 32
! [value] value is the transparency in %
URxvt.background: [65]#040404

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Rofi
rofi.color-enabled:	true
rofi.color-window:	#000, #000, #000
rofi.color-normal:	#111, #819396, #222, #008ed4, #ffffff
rofi.color-active:	#002b37, #008ed4, #003643, #008ed4, #66c6ff
rofi.color-urgent:	#002b37, #da4281, #003643, #008ed4, #890661

rofi.fake-transparency:	true
rofi.lines:		3
rofi.bw:		0
rofi.opacity:		"10"
rofi.hide-scrollbar:	true
rofi.width:		30

