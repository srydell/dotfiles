{
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"args": ["--background-index"],
			"rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
			"filetypes": ["c", "cpp", "objc", "objcpp", "cpp.benchmark", "cpp.gtest", "cpp.catch2"]
		},
